@model IEnumerable<Lab02.WebsiteBanHang.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h2>Categories</h2>

<p>
    <a asp-action="Add" asp-controller="Category" class="button button-primary">Add New Category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Display" asp-route-id="@category.Id" class="button button-secondary">View</a>
                    <a asp-action="Update" asp-route-id="@category.Id" class="button button-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="button button-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>