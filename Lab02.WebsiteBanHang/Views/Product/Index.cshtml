@model IEnumerable<Lab02.WebsiteBanHang.Models.Product>

@{
    ViewData["Title"] = "Products";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h2>Products</h2>

<p>
    <a asp-action="Add" asp-controller="Product" class="button button-primary">Add New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="Product Image" style="max-width: 100px;" />
                    }
                </td>
                <td>
                    <a asp-action="Display" asp-route-id="@product.Id" class="button button-secondary">View</a>
                    <a asp-action="Update" asp-route-id="@product.Id" class="button button-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="button button-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>